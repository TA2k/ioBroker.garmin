    "adhoc": {
      "type": "checkbox",
      "newLine": true,
      "sm": 6,
      "label": {
        "en": "Fetch Adhoc and Personal records",
        "de": "Adhoc und Personal records abrufen",
        "ru": "Получить Adhoc и Личные записи",
        "pt": "Buscar Adhoc e registros pessoais",
        "nl": "Haal Adhoc en Persoonlijke gegevens op",
        "fr": "Récupérer Adhoc et les dossiers personnels",
        "it": "Recupera Adhoc e Personal records",
        "es": "Obtener registros Adhoc y Personal",
        "pl": "Pobierz Adhoc i Personal records",
        "uk": "Отримати Adhoc та особисті записи",
        "zh-cn": "获取Adhoc和个人记录"
      }
    },
    "allowlistExact": {
      "type": "text",
      "newLine": true,
      "sm": 12,
      "placeholder": "hydration.valueinml, totalsteps, dailysleep.dailysleepdto.sleepscores.overall.value",
      "label": {
        "en": "Exact datapoint names or paths (comma-separated)",
        "de": "Exakte Datenpunkt-Namen oder Pfade (komma-separiert)"
      },
      "help": {
        "en": "Datapoints with exactly these names or paths will be saved. Supports full paths like 'hydration.valueinml'. Leave empty to disable.",
        "de": "Datenpunkte mit genau diesen Namen oder Pfaden werden gespeichert. Unterstuetzt volle Pfade wie 'hydration.valueinml'. Leer lassen zum Deaktivieren."
      }
    },
    "allowlistSearch": {
      "type": "text",
      "newLine": true,
      "sm": 12,
      "placeholder": "hydration, sleep, steps",
      "label": {
        "en": "Search terms (comma-separated)",
        "de": "Suchbegriffe (komma-separiert)"
      },
      "help": {
        "en": "Datapoints containing these terms in name or path will be saved. Example: 'hydration' matches all hydration datapoints. Leave empty to disable.",
        "de": "Datenpunkte, die diese Begriffe im Namen oder Pfad enthalten, werden gespeichert. Beispiel: 'hydration' findet alle Hydration-Datenpunkte. Leer lassen zum Deaktivieren."
      }
    }
  }
